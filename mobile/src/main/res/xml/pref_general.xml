<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="direct_call"
        android:summary="@string/pref_direct_call_description"
        android:title="@string/pref_direct_call_title" />

    <ListPreference
        android:defaultValue="199"
        android:entries="@array/pref_emergency_call_button_title"
        android:entryValues="@array/pref_emergency_call_button_value"
        android:key="emergency_call_button"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_assign_emergency_call_button" />

</PreferenceScreen>
